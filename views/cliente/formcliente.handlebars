<h3>Cliente</h3>
<hr>
<form action="/clientes/save" method="POST">

    <input type="hidden" name="id" 
    value="{{cliente.id}}">

    <div class="form-group">
        <label for="txtnome">Nome:</label>
        <input type="text" name="nome"
            id="txtnome" value="{{cliente.nome}}"
            class="form-control" required>
            <!-- Binding -->
    </div>
    <!--colocar os demais campos do cliente-->
    <div class="form-group">
        <label for="txtendereco">Cpf:</label>
        <input type="text" id="txtendereco" 
        value="{{cliente.endereco}}"
        class="form-control" name="endereco">
    </div>
    <div class="form-group">
        <label for="txtsexo">Meta:</label>
        <input type="text" id="txtsexo" 
        value="{{cliente.sexo}}"
        class="form-control" name="sexo">
    </div>
    <div class="form-group">
        <label for="txttelefone">Vendas:</label>
        <input type="text" id="txttelefone" 
        value="{{cliente.telefone}}"
        class="form-control" name="telefone">
    </div>
    <br>
    <button type="submit" class="btn btn-primary">Enviar</button>
</form>